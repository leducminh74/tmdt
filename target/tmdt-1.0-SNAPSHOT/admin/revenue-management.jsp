    <%--change month--%>
    <script>
        document.getElementById('month').addEventListener("change", (e) => {
            var month = e.target.value;
            var revenueTotalByMonth = document.getElementById('revenue-admin-by-month');
            console.log(month);
            $.ajax({
                method: "POST",
                url: "/tmdt_war_exploded/admin/revenue-management",
                data: {
                    month: month
                },
                success: function(data) {
                    revenueTotalByMonth.innerHTML = "$ " + data;
                },
                error: function (data) {
                    alert("Select error!!")
                }
            });
        })

    </script>

